@model OOAD___Projektat___G3.Models.Artikal

@{
    ViewData["Title"] = "Promjena";
}
<style>
body {
  background-image: url('https://i.ibb.co/Z1h18yK/25386.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;
}
</style>


<h4 style="margin: 1.5vw 1.5vw 0vw 0vw ">
Podaci artikla
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Promjena" asp-controller="Artikal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group"  style="margin-top:0.242vw; color:black; font-size:1.172vw">
                <label asp-for="naziv" class="control-label">Naziv artikla</label>
                <input asp-for="naziv " class="form-control" />
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="cijena" class="control-label">Cijena</label>
                <input asp-for="cijena" class="form-control" />
                <span asp-validation-for="cijena" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="kolicina" class="control-label">Kolicina</label>
                <input asp-for="kolicina" class="form-control" />
                <span asp-validation-for="kolicina" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="opis" class="control-label">Opis</label>
                <input asp-for="opis" class="form-control" />
                <span asp-validation-for="opis" class="text-danger"></span>
            </div>
           <label asp-for="slika" class="control-label "style="visibility: hidden"></label>
            <input asp-for="slika" class="form-control" style="visibility: hidden"/>
            <span asp-validation-for="slika" class="text-danger"></span>
            <input type="hidden" asp-for="id" />
            <div class="form-group" style="margin-top:1.875vw">
                <input type="submit" value="SPASI" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding: 1rem; border: double black 0.5vw; display: grid; grid-template-columns: 50% 50%">
 <div id="results" style="border: double black 0.5vw;">Slika će se prikazati ovdje...</div>
 <div style="margin-left: 30%">
 <div id="my_camera" style="border: double black 0.5vw;"></div>
 <script type="text/javascript" src="~/js/webcam.min.js"></script>
 <script>
     Webcam.set({
         width: 320,
         height: 240,
         image_format: 'jpeg',
         jpeg_quality: 90
     });
     Webcam.attach( '#my_camera' );
 </script>


 <script>
 function take_snapshot() {
     Webcam.snap(function(data_uri){
         document.getElementById('results').innerHTML = '<img src="' + data_uri + '"/>';
         document.getElementById('slika').value = data_uri;
     });
 }
 </script>

 <input type="button" id="takeshot" class="btn btn-primary" style="margin-top:1.5vw"
value="Uslikaj" onClick="take_snapshot()">
 </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<img src=@Model.slika
style="position:absolute; right:3vw; top:6.5vw; border:black solid 0.5vw ; width:30%; height:40%; background-color:white;">

