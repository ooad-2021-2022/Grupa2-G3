@model OOAD___Projektat___G3.Models.Administrator
@{
    ViewData["Title"] = "Login";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-PIJACA - Prijava korisnika</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Prijava.css" />
</head>

<body>
<p><img src="https://i.ibb.co/Hh5QK9W/logo.png" 
   width="150" alt="Smiley face" style="margin-top:2vw; margin-left:2vw"/>
           
<h1 style="text-align:center; font-size:3vw; margin-top:4.5vw">
   Prijava
</h1>

<h2 style="text-align:center; font-size:2vw; margin-top: 2vw;">
   Unesite korisničko ime i lozinku
</h2>
            
<form asp-action="LoginAdministrator" style="width: 40%; margin-left : 30%; margin-top:5vw">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"  style="margin-top:0.242vw; color:black; font-size:1.172vw">
                <label asp-for="naziv" class="control-label"> Korisničko ime:</label>
                <input asp-for="naziv" class="form-control" />
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
              <div class="form-group"  style="margin-top:0.242vw; color:black; font-size:1.172vw">
                <label asp-for="password" class="control-label"> Lozinka</label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
           <div class="form-group" style="margin-top:1.875vw">
                <input type="submit" value="Login" class="btn btn-primary" />
           </div>
 </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>




</html>

