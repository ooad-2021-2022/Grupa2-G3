@model OOAD___Projektat___G3.Models.Artikal

@{
    ViewData["Title"] = "Prikaz";
}
<style>
body {
  background-image: url('https://i.ibb.co/89SYSkV/Background-Rot.png');
  background-repeat: no-repeat;
  background-attachment: fixesd;
  background-size: contain;
}
</style>
<p><img src="https://i.ibb.co/Hh5QK9W/logo.png" 
    alt="Smiley face" width="150" style="vertical-align:top;margin:1.563vw -3.125vw" />

<h4 style="margin: 1.5vw 1.5vw 0vw 0vw ">
Podaci artikla
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Promjena">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group"  style="margin-top:0.242vw; color:black; font-size:1.172vw">
                <label asp-for="naziv" class="control-label">Naziv artikla</label>
                <input asp-for="naziv " class="form-control" readonly/>
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="cijena" class="control-label">Cijena</label>
                <input asp-for="cijena" class="form-control" readonly/>
                <span asp-validation-for="cijena" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="kolicina" class="control-label">Kolicina</label>
                <input asp-for="kolicina" class="form-control" readonly />
                <span asp-validation-for="kolicina" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:0.242vw;color:black; font-size:1.172vw">
                <label asp-for="opis" class="control-label">Opis</label>
                <input asp-for="opis" class="form-control" readonly/>
                <span asp-validation-for="opis" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="id" />
            
            
        </form>
    </div>
</div>
<button type="submit" value="KUPI" class="btn btn-primary" onclick="location.href='@Url.Action("Kupi","Search", new{id = Model.id})'"  style="position:absolute; top:30vw; right:70vw; font-size:2vw">Kupi</button>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


